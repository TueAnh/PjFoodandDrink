<div class="container">

    <div class="row">

      <div class="col-lg-3">

        <h1 class="my-4">Category</h1>
        <div class="list-group">
          <% @categories.each do |category| %>
          <li class="list-group-item"><%= link_to category.name, products_path(:category_id => category.id)%></li>
          <%end%>
        </div>

      </div>
      <!-- /.col-lg-3 -->
      <div class="col-lg-9">
       <div class="row">
          <%= render @products%>
        </div>
      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
