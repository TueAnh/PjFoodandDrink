    <div class="col-lg-12">
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th><%= t ".name" %></th>
                  <th><%= t ".image" %></th>
                  <th><%= t ".quantity" %></th>
                  <th><%= t ".total" %></th>
                </tr>
              </thead>
              <tbody id="list-products">
                <%= render @order_items %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <%= link_to "Back", admin_orders_path %>
    </div>
</div>