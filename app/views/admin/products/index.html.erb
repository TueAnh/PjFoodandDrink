<p1>Manage Products</p1>

<div class="row">
    <div class="col-lg-12">
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th><%= t ".category" %></th>
                  <th><%= t ".name" %></th>
                  <th><%= t ".image" %></th>
                  <th><%= t ".quantity" %></th>
                  <th><%= t ".price" %></th>
                  <th><%= t ".description" %></th>
                  <th><%= t ".function" %></th>
                </tr>
              </thead>
              <tbody id="list-products">
                <%= render @products%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <%= link_to "Back", admin_root_path %>
      <%= link_to "Add", new_admin_product_path %>
    </div>
</div>
<style type="text/css">
  .image img{
    width: 200px;
    height: 200px;
  }
</style>
